<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_sel"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="7dp" >

        <LinearLayout
            android:id="@+id/linear_expressway_list_item_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/expressway_list_item_left_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/expressway_list_item_left_top_bg"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="国家高速"
                android:textColor="#f0f0f0"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/tv_expressway_list_item_left_code"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#f0f0f0"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_expressway_list_item_left_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="2dp"
                android:singleLine="true"
                android:textColor="#f0f0f0"
                android:textSize="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_expressway_list_item_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="13dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/tv_expressway_list_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_expressway_list_item_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/halving_line" />

</LinearLayout>