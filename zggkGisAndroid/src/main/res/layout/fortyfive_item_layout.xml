<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_sel"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="15dp" >

    <com.mobo.zggkgisandroid.FortyFive.FortyFiveRankTextView
        android:id="@+id/tv_fortyfive_rank"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="11dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_fortyfive_name"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLength="7"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="16dp" />

    <com.mobo.zggkgisandroid.FortyFive.FortyFiveRankView
        android:id="@+id/v_fortyfive_progress"
        android:layout_width="0dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/tv_fortyfive_count"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="94.4"
        android:textColor="#ff333333"
        android:textSize="20dp" />

</LinearLayout>