<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/map_statictis_lv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:gravity="center|left"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/map_statictis_lv_mail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/map_statictis_lv_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/ll_map_statictis_lv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_map_statictis_lv"
                android:layout_width="35.7dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/kpi_switch_close"
                android:clickable="true"
                android:tag="0" />
        </LinearLayout>
    </LinearLayout>

