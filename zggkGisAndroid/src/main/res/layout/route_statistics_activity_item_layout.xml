<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_route_statistics_item_indicator_grade"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_route_statistics_item_indicator_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/img_route_statistics_item_indicator_grade"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_route_statistics_item_kilometre"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_route_statistics_item_percentage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="13dp" />

</LinearLayout>