<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            style="@style/seaech_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/match_search_road" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/seaech_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总    数：" />

            <TextView
                android:id="@+id/search_result_road_kpi_total_number"
                style="@style/seaech_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总数：" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/seaech_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总里程：" />

            <TextView
                android:id="@+id/search_result_road_kpi_total_km"
                style="@style/seaech_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总里程：" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_result_road_kpi_name"
                style="@style/seaech_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pqi_"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/search_result_road_kpi_value"
                style="@style/seaech_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/search_result_road_kpi_color"
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:background="#C0FF3E" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>