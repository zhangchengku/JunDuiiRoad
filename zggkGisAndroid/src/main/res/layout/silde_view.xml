<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/silde_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:tag="0" >

    <TextView
        android:id="@+id/v_silde_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/base_top_color"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:splitMotionEvents="false"
        android:tag="0"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <ListView
        android:id="@+id/list_silde"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:tag="0" >
    </ListView>

    <LinearLayout
        android:id="@+id/v_silde_buttom"
        android:layout_width="match_parent"
        android:layout_height="40.75dp"
        android:orientation="vertical" 
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/halving_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/white" >

            <LinearLayout
                android:id="@+id/v_silde_buttom_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bottom_choice_selector"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/nearby_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/nearby" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/v_silde_buttom_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bottom_choice_selector"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_img" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/info" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>