<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lv_item_list_level"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1.5"
        android:background="@color/blue_new"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp" >

        <TextView
            android:id="@+id/lv_item_tv_assessment_list_level_grade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="全国技术状况等级"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/lv_item_img_assessment_list_level_grade"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/lv_item_tv_assessment_list_index_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="left"
        android:includeFontPadding="false"
        android:padding="3dp"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/lv_item_tv_assessment_list_exponential"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="right"
        android:includeFontPadding="false"
        android:padding="3dp"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="13dp" />

</LinearLayout>