<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/ll_traffic_road_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#4f81ff" >

            <TextView
                android:id="@+id/tv_traffic_road_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="路线名称"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/img_traffic_road_name"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tv_traffic_road_name"
                android:background="@drawable/sort_buttom" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_traffic_road_length"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#4f81ff" >

            <TextView
                android:id="@+id/tv_traffic_road_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#4f81ff"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="长度"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/img_traffic_road_length"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tv_traffic_road_length"
                android:background="@drawable/sort_buttom"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_traffic_indicator_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.75"
            android:background="#4f81ff" >

            <TextView
                android:id="@+id/tv_traffic_indicator_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#4f81ff"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/img_traffic_indicator_number"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tv_traffic_indicator_number"
                android:background="@drawable/sort_buttom"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="0.75"
            android:background="#4f81ff"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="3dp"
            android:singleLine="true"
            android:text="等级"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/ll_traffic_indicator_map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#4f81ff"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="地图"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:background="@drawable/traffic_map_icon" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list_traffic_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="2dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>