<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_traffic_list_road_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_weight="2"
        android:gravity="center|left"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_traffic_list_road_mail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_traffic_list_indicator_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="13dp" />

    <LinearLayout
        android:id="@+id/ll_traffic_list_indicator_grade"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_weight="0.75"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_traffic_list_indicator_grade"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_traffic_list_indicator_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="#ff333333"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_traffic_list_xs"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_traffic_list_xs"
            android:layout_width="35.7dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/kpi_switch_close"
            android:clickable="true"
            android:tag="0" />
    </LinearLayout>

</LinearLayout>