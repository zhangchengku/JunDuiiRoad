        <item name="android:textColor">#5E5E5E</item>
    </style>

    <style name="play_title">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="play_key">
        <item name="android:textColor">#4c4c4c</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="play_valus">
        <item name="android:textColor">#242424</item>
